<form class="auth-form" data-form novalidate>
    <div class="auth-form__fields">
        <div class="auth-form__field" data-slot="login"></div>
        <div class="auth-form__field" data-slot="password"></div>
    </div>
    <div class="auth-form__error" data-slot="error" aria-live="polite"></div>
    <a href="#" class="auth-form__forgot--disabled" data-action="forgot">{{forgotPasswordText}}</a>
    <div class="auth-form__actions" data-slot="submit"></div>
</form>
