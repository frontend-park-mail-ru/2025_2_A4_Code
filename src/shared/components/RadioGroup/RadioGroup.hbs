<fieldset class="radio-group">
    {{#if label}}
        <legend class="radio-group__label">{{label}}</legend>
    {{/if}}
    <div class="radio-group__options">
        {{#each options}}
            <label class="radio-group__option">
                <input
                    type="radio"
                    name="{{../name}}"
                    value="{{value}}"
                    {{#if checked}}checked{{/if}}
                    data-value="{{value}}"
                />
                <span>{{label}}</span>
            </label>
        {{/each}}
    </div>
</fieldset>
