    {{#if isLogin}}
        <div class="login-form">
            <h1 class="login-title">{{loginTitle}}</h1>
            <form>
                <label for="login"></label>
                <input type="text" id="login" name="login" required placeholder="{{loginPlaceholder}}"/>
                <label for="password">{{passwordLabel}}</label>
                <input type="password" id="password" name="password" required placeholder="{{passwordPlaceholder}}"/>
                <button type="submit">{{loginButtonText}}</button>
            </form>
        </div>
        <button class="toggle-btn-registration {{#if isRegister}}active{{/if}}" onclick="window.router.updatePageState(window.authPage, {mode: 'register'})">Регистрация</button>
    {{/if}}
    {{#if isRegister}}
        <div class="register-form">
            <h1>{{registerTitle}}</h1>
            <form>
                <label for="email">{{emailLabel}}</label>
                <input type="email" id="email" name="email" required />
                <label for="password">{{passwordLabel}}</label>
                <input type="password" id="password" name="password" required />
                <label for="confirmPassword">{{confirmPasswordLabel}}</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required />
                <button type="submit">{{registerButtonText}}</button>
            </form>
        </div>
    {{/if}}
</div>