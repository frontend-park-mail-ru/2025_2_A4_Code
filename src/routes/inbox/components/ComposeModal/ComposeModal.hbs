<div class="compose-overlay" role="dialog" aria-modal="true">
  <div class="compose-modal">
    <button class="compose-modal__close" data-action="close" aria-label="Закрыть окно">
      <img src="/img/close-modal.svg" alt="" aria-hidden="true" />
    </button>

    <div class="compose-modal__body">
      <div class="compose-modal__recipient">
        <div class="compose-modal__avatar">
          {{#if avatarUrl}}
            <img class="compose-modal__avatar-image" src="{{avatarUrl}}" alt="{{avatarLabel}}" />
          {{else}}
            <span class="compose-modal__avatar-fallback" aria-hidden="true">{{avatarLabel}}</span>
          {{/if}}
        </div>

        <div class="compose-modal__inputs">
          <input class="compose-modal__input" type="text" placeholder="Кому:" data-field="to" />
          <input class="compose-modal__input" type="text" placeholder="Тема письма:" data-field="subject" />
        </div>
      </div>

      <div class="compose-modal__actions">
        <div class="compose-modal__action-slot" data-slot="attach"></div>
        <div class="compose-modal__action-slot" data-slot="draft"></div>
      </div>

      <textarea class="compose-modal__textarea" placeholder="Текст сообщения" data-field="body"></textarea>

      <div class="compose-modal__footer">
        <div class="compose-modal__send-slot" data-slot="send"></div>
      </div>
    </div>
  </div>
</div>

